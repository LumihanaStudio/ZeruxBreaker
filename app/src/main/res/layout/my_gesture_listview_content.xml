<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/my_gesture_listview_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:src="@drawable/ic_mic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/my_gesture_listview_icon"
        android:orientation="vertical">

        <TextView
            android:textColor="#000"
            android:id="@+id/my_gesture_listview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="흔들어 카카오톡 열기"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/my_gesture_listview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Luminon Canoness가 제작함"
            android:textSize="12dp" />
    </LinearLayout>

    <com.rey.material.widget.Switch
        android:id="@+id/my_gesture_listview_switch"
        android:padding="16dp"
        app:sw_thumbColor="#1E87E4"
        app:sw_trackColor="#1565BF"
        android:layout_centerVertical="true"
        style="@style/Material.Widget.Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"/>
</RelativeLayout>